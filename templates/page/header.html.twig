<nav class="navbar navbar-expand-lg navbar-light bg-light py-0">
    <a class="navbar-brand" href="{{ path('home') }}">
        <img class="nrLogo" alt="NR Logo" src="{{ asset('build/images/NR_logo.png') }}" />
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div id="navbarSupportedContent" class="collapse navbar-collapse">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" data-path="portfolio" href="{{ path('portfolio') }}">My Skillz</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-path="post.index" href="{{ path('post.index') }}">Posts</a>
            </li>
            <!-- check out header_bu.html.twig for references to removed nav items "li.nav-item.dropdown" and "li.nav-item a.nav-link.disabled" -->
        </ul>
        <ul class="navbar-nav ml-auto">
            {% if app.user %}
                <li class="nav-item">
                    <span>Hello, {{ app.user.username }}&nbsp;/&nbsp;</span>
                </li>
                <li class="nav-item">
                    <a class="nav-link p-0" data-path="app_logout" href="{{ path('app_logout') }}">Logout</a>
                </li>
            {% else %}
                <li class="nav-item">
                    <a class="nav-link p-0" data-path="register" href="{{ path('register') }}">Register</a>
                </li>
                <li class="nav-item">&nbsp;/&nbsp;</li>
                <li class="nav-item">
                    <a class="nav-link p-0" data-path="app_login" href="{{ path('app_login') }}">Login</a>
                </li>
            {% endif %}
        </ul>
    </div>
</nav>
<script type="application/javascript">
    // Should get everything up to first ".", which should be conventional in parent/children route naming (e.g. post.show)
    let l_routeMatches = "{{ app.request.attributes.get('_route') }}".match('^[a-zA-Z0-9-_]+');
    if(l_routeMatches !== undefined && l_routeMatches !== null) {
        let routeRegex = '^' + l_routeMatches;
        $('ul.navbar-nav a').each(function (e) {
            let aPath = $(this).attr('data-path');
            if(aPath !== undefined && aPath !== null) {
                let aMatch = aPath.match(routeRegex);
                if (aMatch !== undefined && aMatch !== null) {
                    $(this).parent('li').addClass('active');
                }
            }
        });
    }
</script>
