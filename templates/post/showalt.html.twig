{% extends 'base.html.twig' %}

{% block title %}Post - {{ post.post_title }}{% endblock %}

{% block body %}
    <h1>{{ post.post_title }}</h1>
    <p>
        <b>Category ID: </b><em>{{ post.cat_id }}</em>
        <br/>
        <b>Category Name: </b><em>{{ post.cat_name }}</em>
    </p>
    <img class="w-50 h-50" alt="Post Image" src="{{ '/uploads/' ~ post.post_image }}" />
{% endblock %}
